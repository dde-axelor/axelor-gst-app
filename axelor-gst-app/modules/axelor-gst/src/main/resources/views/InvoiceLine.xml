<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
  <grid model="com.axelor.gst.app.InvoiceLine" title="Invoice Line" name="invoice-line-grid">
  	<field name="product" onChange="test"/>
  	<field name="hsbn"/>
  	<field name="item"/>
  	<field name="qty"/>
  	<field name="price"/>
  	<field name="netAmount" />
  	<field name="gstRate" />
  	<field name="igst" />
  	<field name="cgst" />
  	<field name="sgst" />
  	<field name="grossAmount"/>
  	<field name="invoice"/>
  </grid>
  
  <form model="com.axelor.gst.app.InvoiceLine" title="Invoice Line" name="invoice-line-form" onLoad="action-set-readonly-values,action-set-gst-amounts">
  	<panel>
  		<field name="product" onChange="action-set-code,action-set-product-details"/>
  		<field name="hsbn"/>
  		<field name="item"/>
  		<field name="qty" onChange="action-set-readonly-values,action-set-gst-amounts"/>
  		<field name="price"/>
  		<field name="netAmount" readonly="true"/>
  		<field name="gstRate" readonly="true"/>
  		<field name="igst" readonly="true"/>
  		<field name="cgst" readonly="true"/>
  		<field name="sgst" readonly="true"/>
  		<field name="grossAmount" readonly="true"/>
  		<field name="invoice"/>
  	</panel>
  </form>
  
  <action-record name="action-set-product-details" model="com.axelor.gst.app.InvoiceLine">
  	<field name="hsbn" expr="eval:product.hsbn"/>
  	<field name="price" expr="eval:product.salePrice"/>
  	<field name="gstRate" expr="eval:product.gstRate"/>
  	<field name="qty" expr= '1'/>
  </action-record>
  
  
  <action-method name="action-set-gst-amounts">
  	<call class="com.axelor.gst.controller.InvoiceLineController" method="setGst"/>
  </action-method>
  
  <action-method name="action-set-code">
  	<call class="com.axelor.gst.controller.InvoiceLineController" method="setItem"/>
  </action-method>
  
  <action-method name="action-set-readonly-values">
  	<call class="com.axelor.gst.controller.InvoiceLineController" method="setNetAmount"/>
  </action-method>
  
 </object-views>